@model digiturno.Models.TurnoImpresoModel
@{
    ViewBag.Title = "Imprimir";
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}
<div style="margin: 5% 25% 5% 25%; padding:30px;border: 2px dotted #000;">
    <div class="row">
        <div class="col-sm-12">
            <p class="text-center">@Model.Empresa</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <small>Sucursal: @Model.Sucursal</small>
        </div>
        <div class="col-sm-4">
            <small>Fecha: @Model.Fecha</small>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3 class="text-center">Turno</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-center">@Model.Descripcionturno</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h5 class="text-center text-black">CC: @Model.Cedula</h5>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12">
            <button class="btn btn-info center-block" onclick="cerrar()">Cerrar</button>
        </div>
    </div>

</div>
<script>
    function cerrar(e) {
        window.location.href="@Url.Action("Index","Turno")"
    }
</script>